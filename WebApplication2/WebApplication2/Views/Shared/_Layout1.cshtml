<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PUPPQ Digital Information Kiosk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site1.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="sidebar">
        <div class="horibar d-flex justify-content-between align-items-center">
            <div class="logo-brand d-flex align-items-center"><img src="~/images/school-logo.png" /><h6>PUP PARANAQUE<br />DIGITAL INFORMATION KIOSK</h6></div>
            <button class="icon-menu d-lg-none" id="icon-menu" type="button" onclick="menu()"><i class="im-icon fa-solid fa-bars"></i>
            </button>
        </div>
        <div class="colItems d-lg-block" id="colItems">
            <hr />
            <h6>MY CONTENT</h6>
            <a class="compose" href="#">Compose</a>
            <a class="feed" href="#">Feed</a>
            <a class="drafts" href="#">Drafts</a>
            <a class="bin" href="#">Bin</a>
            <hr />
            <h6>OFFICE PROFILE</h6>
            <a class="basic" href="#"><i class="fa-solid fa-file-lines"></i> Basic Details</a>
            <a class="official" href="#"><i class="fa-solid fa-sitemap"></i> Officials & Staff</a>
            <a class="facility" href="#"><i class="fa-solid fa-industry"></i> Download Forms</a>
            <a class="certificate" href="#"><i class="fa-solid fa-award"></i> FAQs</a>
            <hr />
            <h6>ACCOUNT</h6>
            <a class="setting" href="#"><i class="fa-solid fa-gear"></i> Account Settings</a>
            <hr class="ehr"/>
        </div>
    </div>

    <!-- Page content -->
    <div class="content" id="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
